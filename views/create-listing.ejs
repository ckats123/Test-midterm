<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/create_listing.css" />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400;500;600&family=Young+Serif&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/21c6db8c84.js" crossorigin="anonymous"></script>
</head>
<body>

  <%- include('partials/nav') %>

  <header>
    <h1>Create your listing!</h1>
    <img src="./images/home.png" alt="image of woman on computer">
  </header>

  <main>
    <div id="create-listing-form-container">
      
      <h2>Make a listing for your Service!</h2>
      <hr>
      <br>
<!--create-listing form______________________________________________________-->
      <form action="/create-listing" method="POST"> 
        <label for="title">Title:</label>
         <!--title-->
        <input type="text" id="title" name="title" required><br><br>

        <label for="price">Price:</label>
        <!--price-->
        <input type="number" id="price" name="price" step="0.01" required><br><br> 

        <label for="description">Description:</label><br>
        <!--descriptions-->
        <textarea id="description" name="description" rows="4" cols="50" required placeholder="details about your service listing here..."></textarea><br><br>

        <button id="create-listing-button" type="submit">Create Listing</button>
      </form>

    </div>
  </main>

  <%- include('partials/footer') %>
  
</body>
</html>
